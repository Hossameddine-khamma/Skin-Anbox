<?xml version="1.0" encoding="UTF-8"?>
<addon
	id="skin.anbox"
	version="0.7.1"
	name="Anbox"
	provider-name="Eddage, Bumpaneer">
	<requires>
		<import addon="xbmc.gui" version="5.14.0"/>
		<import addon="script.skinshortcuts" version="1.0.8"/>
	</requires>
	<extension
		point="xbmc.gui.skin"
		debugging="false"
		effectslowdown="1.0">
		<res width="1920" height="1080" aspect="16:9" default="true" folder="xml" />
		<res width="1920" height="1200" aspect="16:10" default="false" folder="xml" />
		<res width="1920" height="1280" aspect="3:2" default="false" folder="xml" />
		<res width="1920" height="1440" aspect="4:3" default="false" folder="xml" />
		<res width="2040" height="1080" aspect="17:9" default="false" folder="xml" />
		<res width="2560" height="1080" aspect="21:9" default="false" folder="xml" />
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en_AU">A material skin for Kodi by Eddage</summary>
		<summary lang="en_GB">A material skin for Kodi by Eddage</summary>
		<summary lang="en_NZ">A material skin for Kodi by Eddage</summary>
		<summary lang="en_US">A material skin for Kodi by Eddage</summary>
		<description lang="en_AU">Anbox is an adaptation of Confluence based on a material design.</description>
		<description lang="en_GB">Anbox is an adaptation of Confluence based on a material design.</description>
		<description lang="en_NZ">Anbox is an adaptation of Confluence based on a material design.</description>
		<description lang="en_US">Anbox is an adaptation of Confluence based on a material design.</description>
		<license>GNU GENERAL PUBLIC LICENSE. Version 2, June 1991</license>
		<platform>all</platform>
		<assets>
			<icon>resources/icon.png</icon>
			<fanart>resources/fanart.jpg</fanart>
			<screenshot>resources/screenshot01.jpg</screenshot>
			<screenshot>resources/screenshot02.jpg</screenshot>
			<screenshot>resources/screenshot03.jpg</screenshot>
		</assets>
	</extension>
</addon>
